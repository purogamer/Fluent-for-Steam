"resource/layout/gamespage_details_nonsteam.layout"
{
	controls
	{
		nonsteamdetails { controlname="CGamesPage_Details_NonSteam" style="nonsteamdetails" }
		headerlabel { controlname="Label" style="gamedetails-headerlabel" labeltext="#Steam_NonSteam" }
		bodycontent { controlname="RichText" style="bodycontent" }
	}

	colors
	{
		RichText.InsetX "0"
		RichText.InsetY "2"
		GameDetailsNonSteam.ExtraVerticalSpacing "34"
	}

	styles
	{
		nonsteamdetails 
		{
			bgcolor="black45"
		}
		"RichText"
		{
			inset-top=-4
			textcolor="White50"
		}
		bodycontent
		{
			render_bg {}
		}

		gamedetails-headerlabel
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut"
		}
		gamedetails-headerlabel:hover
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut_h"
		}

		gamedetails-headerlabel-red
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut"
		}
		gamedetails-headerlabel-red:hover
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut_h"
		}

		gamedetails-headerlabel-green
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut"
		}
		gamedetails-headerlabel-green:hover
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut_h"
		}

		gamedetails-headerlabel-blue
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut"
		}
		gamedetails-headerlabel-blue:hover
		{
			bgcolor="none"
			render_bg{}
			image="graphics/fluent/icons/shortcut_h"
		}
	}

	layout
	{
		region { name=body margin=8 width=max height=max }
		place { region=body control=headerlabel align=left x=8 y=8 height=36 width=36 dir=right }
		place { start=headerlabel control=bodycontent x=16 width=max margin-right=16 }
	}
}