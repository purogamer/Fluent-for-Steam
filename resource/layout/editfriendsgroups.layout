"resource/layout/editfriendsgroups.layout"
{
	controls
	{
		Description {controlname=Label labelText="#friends_group_edit_categories" wrap=1 } 
		TextEntry { controlname=TextEntry tabposition=1 maxchars=32 unicode=1 }
		AddTagButton { controlname=Button style="button" tabposition=2 default=1 }
	}
	layout
	{
		region { name="main" x=16 y=4 width=max height=max margin-bottom=0 }
		place { control="TagChecks" x=8 y=50 width=max height=150 margin-top=8 margin-right=8 }
		place { start="TagChecks" control="TextEntry" y=6 height=28 width=max end-right=AddTagButton dir=down margin-right=8 }
		place { start="TextEntry" control="AddTagButton" height=28 width=96 align=right margin-right=8 }
		place { start="TextEntry" control="Description" y=6 width=max margin-right=8 dir=down }
	}
}